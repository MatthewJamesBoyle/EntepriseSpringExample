<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<!-- DataSource & Connection info. -->
		<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

		<!-- General Hibernate settings. -->
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>
		<property name="use_sql_comments">true</property>

		<!-- DDL Mode. -->
		<property name="hbm2ddl.auto">update</property>

		<!-- All our Hibernate mapping XML files. -->
		<mapping resource="com/example/spring/aam/model/Resource.hbm.xml" />
		<mapping resource="com/example/spring/aam/model/AssetType.hbm.xml" />
		<mapping resource="com/example/spring/aam/model/Asset.hbm.xml" />
		<mapping resource="com/example/spring/aam/model/Work.hbm.xml" />
		<mapping resource="com/example/spring/aam/model/Customer.hbm.xml" />


	</session-factory>
</hibernate-configuration>